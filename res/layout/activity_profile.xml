<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:id="@+id/textView"
                android:paddingTop="6dip"
                android:textColor="#609c00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:textColor="#609c00"
                android:textSize="16sp"
                android:id="@+id/textViewNameProfile"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:paddingTop="6dip"
                android:textColor="#609c00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:textColor="#609c00"
                android:textSize="16sp"
                android:id="@+id/textViewEmailProfile"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto de perfil"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:textColor="#609c00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageViewPicProfile"
                android:layout_gravity="center_horizontal"
                android:maxHeight="250dp"
                android:maxWidth="250dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ver mis reservas"
                android:id="@+id/buttonRes"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#609c00"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>